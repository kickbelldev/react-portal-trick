{
  "name": "@charley-kim/react-unmanaged-portal",
  "sourceRoot": "packages/react-unmanaged-portal/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/react-unmanaged-portal/dist"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["{projectRoot}/src/**/*.{ts,tsx}"],
        "fix": true
      }
    }
  },
  "release": {
    "version": {
      "generator": "@nx/js:release-version",
      "options": {}
    },
    "changelog": {
      "generator": "@nx/js:release-changelog",
      "options": {}
    },
    "publish": {
      "executor": "@nx/js:release-publish",
      "options": {
        "manifestRootsToUpdate": ["packages/react-unmanaged-portal"],
        "buildTarget": "@charley-kim/react-unmanaged-portal:build"
      }
    }
  }
}
